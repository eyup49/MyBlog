
@model MyPageBlog.Entities.Dtos.UserAddDto
@{ 
    Layout = "_UserLoginLayout";
    ViewBag.Title = "Kayıt Ol Sayfası";
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4"><span class="fas fa-user-edit"></span> Kayıt Ol</h3></div>
                <div class="card-body">
                    <form asp-action="Register" asp-controller="User" method="post">
                       
                        <div asp-validation-summary="All" class="text-danger" id="validation-summary" aria-hidden="true" style="display:none;">

                        </div>
                        <div class="form-group">
                            <label asp-for="UserName"></label>
                            <input class="form-control" asp-for="UserName" placeholder="Lütfen, kullanıcı adı giriniz" />
                            <span class="text-danger" asp-validation-for="UserName"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email"></label>
                            <input type="email" class="form-control" asp-for="Email" placeholder="Lütfen, e-posta adresi giriniz" />
                            <span class="text-danger" asp-validation-for="Email"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input type="password" class="form-control" asp-for="Password" placeholder="Lütfen, şirenizi  giriniz" />
                            <span class="text-danger" asp-validation-for="Password"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="PhoneNumber"></label>
                            <input type="text" class="form-control" asp-for="PhoneNumber" placeholder="Lütfen, telefon numaranızı  giriniz" />
                            <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="PictureFile"></label>
                            <input type="file" accept="image/*" class="form-control-file" asp-for="PictureFile" placeholder="Lütfen, telefon numaranızı  giriniz" />
                            <span class="text-danger" asp-validation-for="PictureFile"></span>
                        </div>

                        <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">

                            <button class="btn btn-primary" type="submit"><span class="fas fa-sign-in-alt"></span>Kaydet</button>
                        </div>
                    </form>
                </div>
               
            </div>
        </div>
    </div>
</div>